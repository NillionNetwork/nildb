{
  "private": true,
  "repository": "https://github.com/NillionNetwork/nildb",
  "type": "module",
  "scripts": {
    "nildb": "pnpm --filter @nillion/nildb",
    "start": "pnpm nildb start",
    "test": "vitest run",
    "test:unit": "vitest run --project=unit",
    "test:integration": "vitest run --project=integration",
    "migrate": "pnpm nildb migrate",
    "check": "pnpm exec biome ci && pnpm exec tsc -b",
    "fix": "pnpm exec biome check --fix --unsafe && pnpm exec tsc -b",
    "fmt": "pnpm exec biome format --fix"
  },
  "engines": {
    "node": ">=24"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@faker-js/faker": "^10.1.0",
    "@types/elliptic": "^6.4.18",
    "@types/js-yaml": "^4.0.9",
    "@vitest/coverage-v8": "3.2.4",
    "lefthook": "^2.0.1",
    "pino-pretty": "^13.1.2",
    "tsx": "^4.20.6",
    "type-fest": "^5.1.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@10.19.0"
}
