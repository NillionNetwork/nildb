{
  "id": "",
  "name": "variables.wallet.schema.json",
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "_id": { "type": "string", "format": "uuid" },
        "wallet": { "type": "string" },
        "amount": { "type": "number" },
        "status": { "type": "string" },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "coerce": true
        }
      },
      "required": ["wallet", "amount", "status", "timestamp"]
    }
  }
}
