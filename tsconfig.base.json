{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "lib": ["es2023"],
    "noEmit": true,
    "module": "ESNext",
    "target": "ESNext",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {
      "@nillion/api/*": ["api/src/*"]
    }
  }
}
