{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"],
      "#tests/*": ["./tests/*"]
    },
    "composite": true
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts",
    "./bin/*.ts",
    "./migrations/*.ts"
  ]
}
